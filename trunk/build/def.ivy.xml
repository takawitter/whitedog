<?xml version="1.0" encoding="UTF-8" ?>
<project name="def.ivy" xmlns:ivy="antlib:org.apache.ivy.ant"
	xmlns="antlib:org.apache.tools.ant">
	<echo message="${lib.ivy}" />
	<taskdef resource="org/apache/ivy/ant/antlib.xml" 
		uri="antlib:org.apache.ivy.ant">
		<classpath>
			<fileset file="${lib.ivy}/*.jar"/>
		</classpath>
	</taskdef>

	<macrodef name="initRepository">
		<sequential>
			<ivy:settings file="${dir.build}/ivysettings.xml" />
		</sequential>
	</macrodef>

	<macrodef name="resolveDependencies">
		<sequential>
			<ivy:resolve />
			<ivy:retrieve />
		</sequential>
	</macrodef>
</project>
