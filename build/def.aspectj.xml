<?xml version="1.0" encoding="UTF-8" ?>
<project name="def.aspectj">
	<taskdef resource="org/aspectj/tools/ant/taskdefs/aspectjTaskdefs.properties">
		<classpath> 
			<pathelement path="${lib.build}/aspectjtools-1.6.2.jar" /> 
		</classpath>
	</taskdef>

	<presetdef name="iajc5">
		<iajc
			debug="true"
			source="1.5" target="1.5" encoding="UTF-8"
			srcdir="${src}" destdir="${build}"
		>
			<classpath>
				<pathelement path="${lib.build}/aspectjrt.jar" />
				<fileset refid="filesetid.compilelib" />
				<fileset refid="filesetid.lib" />
			</classpath>
		</iajc> 
	</presetdef>

	<presetdef name="iajcjar5">
		<iajc
			debug="true"
			source="1.5" target="1.5" encoding="UTF-8"
			sourceroots="${src}" outJar="${dist}/${jarname}"
		>
			<classpath>
				<pathelement path="${lib.build}/aspectj/aspectjrt.jar" />
				<fileset refid="filesetid.compilelib" />
				<fileset refid="filesetid.lib" />
			</classpath>
		</iajc> 
	</presetdef>
</project>

